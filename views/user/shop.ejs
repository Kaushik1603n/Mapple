        body {
            font-family: Arial, sans-serif;
            padding-top: 60px;
            /* Adjust based on your header's height */
            overflow-y: scroll;
            /* Ensures scrolling is functional */
            -ms-overflow-style: none;
            /* Hides scrollbar for Internet Explorer */
            scrollbar-width: none;
            /* Hides scrollbar for Firefox */
        }

        ::-webkit-scrollbar {
            display: none;
            /* Hides the scrollbar for WebKit browsers (Chrome, Safari) */
        }


        .sticky-aside {
            top: 60px;
            /* Match the header height to align the sticky sidebar */
            height: calc(100vh - 60px);
            /* Adjust height to account for the header */
            overflow-y: auto;
        }



        .like-btn .like-icon {
            font-size: 1.5rem;
            color: #ff5a5f;
        }

        .rating i {
            color: #ffc107;
        }

        .pagination .page-link {
