<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            font-family: Arial, sans-serif;
            padding-top: 60px;
            /* Adjust based on your header's height */
            overflow-y: scroll;
            /* Ensures scrolling is functional */
            -ms-overflow-style: none;
            /* Hides scrollbar for Internet Explorer */
            scrollbar-width: none;
            /* Hides scrollbar for Firefox */
        }

        ::-webkit-scrollbar {
            display: none;
            /* Hides the scrollbar for WebKit browsers (Chrome, Safari) */
        }


        .sticky-aside {
            top: 60px;
            /* Match the header height to align the sticky sidebar */
            height: calc(100vh - 60px);
            /* Adjust height to account for the header */
            overflow-y: auto;
        }



        .like-btn .like-icon {
            font-size: 1.5rem;
            color: #ff5a5f;
        }

        .rating i {
            color: #ffc107;
        }

        .pagination .page-link {
            color: #000;
        }

        .pagination .page-link:hover {
            background-color: #f8f9fa;
            border-color: #dee2e6;
        }

        .card {
            transition: transform 0.2s, box-shadow 0.2s;
            border-radius: 10px;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        .card img {
            max-height: 150px;
            max-width: 150px;
            object-fit: cover;
            margin-bottom: 0px;
        }

        .card-title {
            font-size: 1rem;
            font-weight: 600;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-title span {
            font-weight: 400;
            font-size: 0.9rem;
            color: #555;
        }

        .card-body {
            padding: 15px;
        }

        .text-muted {
            font-size: 0.9rem;
            font-weight: 500;
        }

        .rating i {
            color: #ffc107;
            margin-right: 2px;
            font-size: 1rem;
        }

        .like-btn .like-icon {
            font-size: 1.5rem;
            color: #ff5a5f;
            transition: transform 0.2s, color 0.2s;
        }

        .like-btn:hover .like-icon {
            transform: scale(1.2);
            color: #e63946;
        }

        .btn-dark {
            background-color: #343a40;
            border: none;
            font-size: 0.9rem;
            font-weight: 600;
            padding: 10px;
            border-radius: 10px;
            transition: background-color 0.2s;
        }

        .btn-dark:hover {
            background-color: #495057;
        }

        .btn-outline-light {
            background-color: rgba(255, 255, 255, 0.7);
            border: 1px solid rgba(255, 255, 255, 0.5);
        }

        .btn-outline-light:hover {
            background-color: rgba(255, 255, 255, 0.9);
            border-color: #ddd;
        }

        .mx-auto {
            display: block;
            margin: 0 auto;
        }

        @media (max-width: 576px) {
            .card img {
                max-height: 150px;
            }
        }
    </style>
</head>

<body>
    <%- include("../../views/partials/user/header") %>
        <div class="container-fluid">
            <div class="row">
                <!-- Filters Sidebar -->
                <aside class="col-lg-3 col-md-4 col-12 position-fixed sticky-aside bg-light p-4">
                    <h5 class="px-4 mb-3">Filters</h5>
                    <hr>
                    <div class="filter-section px-4 mb-4">
                        <h6>Filter by Variant</h6>
                        <div>
                            <input type="checkbox" class="variant-checkbox" name="variant" value="128GB" id="128GB"
                                <%=variant.includes('128GB') ? 'checked' : '' %>>
                            <label for="128GB">128GB</label>
                        </div>
                        <div>
                            <input type="checkbox" class="variant-checkbox" name="variant" value="256GB" id="256GB"
                                <%=variant.includes('256GB') ? 'checked' : '' %>>
                            <label for="256GB">256GB</label>
                        </div>
                        <div>
                            <input type="checkbox" class="variant-checkbox" name="variant" value="512GB" id="512GB"
                                <%=variant.includes('512GB') ? 'checked' : '' %>>
                            <label for="512GB">512GB</label>
                        </div>
                        <div>
                            <input type="checkbox" class="variant-checkbox" name="variant" value="1TB" id="1TB"
                                <%=variant.includes('1TB') ? 'checked' : '' %>>
                            <label for="1TB">1TB</label>
                        </div>
                        <div>
                            <input type="checkbox" class="variant-checkbox" name="variant" value="2TB" id="2TB"
                                <%=variant.includes('2TB') ? 'checked' : '' %>>
                            <label for="2TB">2TB</label>
                        </div>
                    </div>

                    <!-- <div class="px-4 mb-4">
                        <h6>Category</h6>
                        <div><input type="checkbox" id="MacBookPro"> <label for="MacBookPro">MacBook Pro</label></div>
                        <div><input type="checkbox" id="MacBookAir"> <label for="MacBookAir">MacBook Air</label></div>
                        <div><input type="checkbox" id="MacMini"> <label for="MacMini">Mac Mini</label></div>
                    </div> -->
                    <form id="priceSearch" action="/user/shop" method="GET">
                        <div class="px-4 mb-4" id="priceFilterContainer">
                            <h6>Price</h6>
                            <div>
                                <input type="checkbox" class="priceRange-checkbox" id="100000-150000" name="priceRange"
                                value="100000-150000" <%=priceRange.includes('100000-150000') ? 'checked' : '' %>>
                                <label for="100000-150000">₹1,00,000 - ₹1,50,000</label>
                            </div>
                            <div>
                                <input type="checkbox" class="priceRange-checkbox" id="150000-175000" name="priceRange"
                                    value="150000-175000" <%=priceRange.includes('150000-175000') ? 'checked' : '' %>>
                                <label for="150000-175000">₹150,000 - ₹175,000</label>
                            </div>
                            <div>
                                <input type="checkbox" class="priceRange-checkbox" id="175000-200000" name="priceRange"
                                    value="175000-200000" <%=priceRange.includes('175000-200000') ? 'checked' : '' %>>
                                <label for="175000-200000">₹175,000 - ₹2,00,000</label>
                            </div>
                        </div>
                    </form>


                </aside>

                <!-- Product Listing -->
                <main class="col-lg-9 col-md-8 offset-lg-3 offset-md-4">
                    <!-- Sorting Options -->
                    <div class="d-flex justify-content-between align-items-center my-4 p-2 rounded  shadow-lg">
                        <!-- Search Bar -->
                        <div class="d-flex flex-fill ">
                            <form id="searchForm" action="/user/shop" method="get" class="d-flex w-100 m-0 p-0 flex-column">
                                <div class="d-flex mb-2 mx-2 pt-2" >
                                    <input type="text" class="form-control me-2 " name="search"
                                        placeholder="Search products" aria-label="Search" value="<%= search || '' %>">
                                    <button class="btn btn-dark px-3" type="submit">Search</button>
                                </div>
                            </form>
                        </div>

                        <!-- Sort Dropdown -->
                        <select id="sortSelect" class="form-select w-auto mx-3 px-5 bg-light">
                            <option value="all" <%=!sortOption || sortOption==='new' ? 'selected' : '' %>>New Product
                            </option>
                            <option value="lowToHigh" <%=sortOption==='lowToHigh' ? 'selected' : '' %>>Price (Low to
                                High)</option>
                            <option value="highToLow" <%=sortOption==='highToLow' ? 'selected' : '' %>>Price (High to
                                Low)</option>
                            <option value="aToZ" <%=sortOption==='aToZ' ? 'selected' : '' %>>Aa-Zz</option>
                            <option value="zToA" <%=sortOption==='zToA' ? 'selected' : '' %>>Zz-Aa</option>
                        </select>
                    </div>

                    <!-- Products Grid -->
                    <div class="row g-4">
                        <% if (allProduct.length> 0) { %>
                            <% allProduct.forEach(product=> { %>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                                    <div class="card border-0 shadow-lg text-center">
                                        <div class="position-relative">
                                            <img src="<%= product.productImage[0] %>"
                                                class="card-img-top mx-auto pt-3 p-1" alt="<%= product.productName %>">
                                            <button
                                                class="btn btn-outline-light position-absolute top-0 end-0 m-2 like-btn">
                                                <span class="like-icon">&#9825;</span>
                                            </button>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <%= product.productName %>
                                                    <%= product.variant %>
                                            </h5>
                                            <p class="text-muted mb-2"><span>&#8377;</span>
                                                <%= product.salePrice.toLocaleString() %>
                                            </p>
                                            <a href="/user/productDetails/<%= product._id %>"
                                                class="btn btn-dark w-100">Buy Now</a>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="col-12">
                                            <p class="text-center text-muted">No products found for your search.</p>
                                        </div>
                                        <% } %>
                    </div>


                    <!-- Pagination -->
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">...</a></li>
                            <li class="page-item"><a class="page-link" href="#">12</a></li>
                        </ul>
                    </nav>
                </main>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
        <script>
            const variantcheckboxes = document.querySelectorAll('.variant-checkbox');
            const form = document.getElementById('searchForm');
            const sortSelect = document.getElementById('sortSelect');

            // Sync checkbox state with the form submission
            variantcheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', () => {
                    const variantInputs = document.querySelectorAll('input[name="variant"]');
                    variantInputs.forEach(input => input.remove()); // Remove old inputs

                    variantcheckboxes.forEach(box => {
                        if (box.checked) {
                            const hiddenInput = document.createElement('input');
                            hiddenInput.type = 'hidden';
                            hiddenInput.name = 'variant';
                            hiddenInput.value = box.value;
                            form.appendChild(hiddenInput);
                        }
                    });

                    form.submit(); // Automatically submit on filter change
                });
            });

            // Capture the selected sort option and update the form
            sortSelect.addEventListener('change', () => {
                const sortOption = sortSelect.value;
                const hiddenSortInput = document.createElement('input');
                hiddenSortInput.type = 'hidden';
                hiddenSortInput.name = 'sortOption';
                hiddenSortInput.value = sortOption;
                form.appendChild(hiddenSortInput);

                form.submit(); // Automatically submit when sorting changes
            });


            const priceRangeCheckboxes = document.querySelectorAll('.priceRange-checkbox');
            const form2 = document.getElementById('priceSearch'); // Ensure form ID matches

            priceRangeCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', () => {
                    console.log("Checkbox changed:", checkbox.checked, "Value:", checkbox.value);

                    // Remove old hidden inputs
                    const existingInputs = document.querySelectorAll('input[name="priceRange"]');
                    existingInputs.forEach(input => input.remove());

                    // Append hidden inputs for checked checkboxes
                    priceRangeCheckboxes.forEach(box => {
                        if (box.checked) {
                            const hiddenInput = document.createElement('input');
                            hiddenInput.type = 'hidden';
                            hiddenInput.name = 'priceRange';
                            hiddenInput.value = box.value;
                            form2.appendChild(hiddenInput);

                            console.log("Hidden input added:", hiddenInput);
                        }
                    });

                    // Submit the form automatically
                    form2.submit();
                });
            });

        </script>
</body>

</html>