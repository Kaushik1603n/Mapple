            background-color: #f8f9fa;
            border-color: #dee2e6;
        }

        .card {
            transition: transform 0.2s, box-shadow 0.2s;
            border-radius: 10px;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        .card img {
            max-height: 150px;
            max-width: 150px;
            object-fit: cover;
            margin-bottom: 0px;
        }

        .card-title {
            font-size: 1rem;
            font-weight: 600;
            color: #333;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-title span {
            font-weight: 400;
            font-size: 0.9rem;
            color: #555;
        }

        .card-body {
            padding: 15px;
        }

        .text-muted {
            font-size: 0.9rem;
            font-weight: 500;
        }

        .rating i {
            color: #ffc107;
            margin-right: 2px;
            font-size: 1rem;
        }

        .like-btn .like-icon {
            font-size: 1.5rem;
            color: #ff5a5f;
            transition: transform 0.2s, color 0.2s;
        }

        .like-btn:hover .like-icon {
