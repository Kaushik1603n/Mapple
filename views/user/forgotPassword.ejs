<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forgot Password Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheet/login.css">
</head>

<body>
  <div class="container">
    <div class="form-container">
      <h1>Forgot Password</h1>
      <p>Please enter your name and the email address associated with your account. <br> We'll promptly send you a link
        to reset your password.</p>
      <form action="/forgotPassword" id="submitform" method="POST">
        <% if (locals.message && locals.message.length> 0) { %>
          <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= locals.message %>
          </div>
          <% } %>
            <input type="email" placeholder="Email" name="email"required>
            <button class="create-account-btn" type="submit">Continue</button>
      </form>
    </div>
    <div class="image-container">
      <img src="/image/lap.webp" alt="Placeholder Image">
    </div>
  </div>
</body>
<script>

  const submitform = document.getElementById("submitform");
  const submitButton = document.querySelector("#submitform button[type='submit']");
  document.addEventListener("DOMContentLoaded", function () {
    submitform.addEventListener("submit", function (e) {
      
      if (false) {
        e.preventDefault();
        return
      }
      if (submitButton) {
        submitButton.disabled = true;
        submitButton.innerText = "Submitting...";
        submitButton.style.backgroundColor = "#cccccc";
        submitButton.style.color = "#ffffff";
        submitButton.style.cursor = "not-allowed";
      }
    })
  })

  window.onload = function () {
    const alertMessage = document.getElementById("alertMessage");
    if (alertMessage) {
      setTimeout(() => {
        alertMessage.classList.remove("show"); // Bootstrap 'fade' class handles the disappearance
        alertMessage.classList.add("d-none"); // Hide completely
      }, 4000);
    }
  };
</script>

</html>