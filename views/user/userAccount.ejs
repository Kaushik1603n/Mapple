<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <%- include("../../views/partials/user/sidebar") %>
        <div class="content">

            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="col-lg-10 col-md-12">
                    <div class="card shadow-lg p-4">
                        <div class="row">

                            <!-- Form Section -->
                            <div class="col-lg-12">
                                <form action="#" method="post">

                                    <% if (locals.message && locals.message.length> 0) { %>
                                        <div id="alertMessage" class="alert alert-danger alert-dismissible fade show"
                                            role="alert">
                                            <%= locals.message %>
                                        </div>
                                        <% } %>

                                            <% if (locals.success && locals.success.length> 0) { %>
                                                <div id="alertMessage"
                                                    class="alert alert-success alert-dismissible fade show"
                                                    role="alert">
                                                    <%= locals.success %>
                                                </div>
                                                <% } %>
                                                    <!-- Profile Picture -->
                                                    <div
                                                        class="  d-flex  justify-content-center ">
                                                        <img src="/image/profile.png"   alt="Profile"
                                                            class="rounded-circle img-fluid shadow col-lg-2">
                                                            
                                                    </div>

                                                    <div class="row">
                                                        <!-- Name Field -->
                                                        <div class="col-lg-6 ">
                                                            <label for="name" class="form-label">Full Name</label>
                                                            <input type="text" class="form-control" id="name"
                                                                name="name" placeholder="Full Name">
                                                            <span class="error-message text-danger"></span>
                                                        </div>

                                                        <!-- Email Field -->
                                                        <div class="col-lg-6 ">
                                                            <label for="email" class="form-label">Email</label>
                                                            <input type="email" class="form-control" id="email"
                                                                name="email" placeholder="Email">
                                                            <span class="error-message text-danger"></span>
                                                        </div>

                                                        <!-- Secondary Email Field -->
                                                        <div class="col-lg-6 ">
                                                            <label for="secondaryEmail" class="form-label">Secondary
                                                                Email</label>
                                                            <input type="email" class="form-control" id="secondaryEmail"
                                                                name="secondaryEmail" placeholder="Secondary Email">
                                                            <span class="error-message text-danger"></span>
                                                        </div>

                                                        <!-- Phone Number Field -->
                                                        <div class="col-lg-6 ">
                                                            <label for="phoneNumber" class="form-label">Phone
                                                                Number</label>
                                                            <input type="text" class="form-control" id="phoneNumber"
                                                                name="phone" placeholder="Phone Number">
                                                            <span class="error-message text-danger"></span>
                                                        </div>

                                                        
                                                    </div>

                                                    <div class="text-center mt-4">
                                                        <button type="submit" class="btn btn-dark px-5 py-2">Edit
                                                            Account</button>
                                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

</body>

</html>