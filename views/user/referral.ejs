<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Referral</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.4/dist/sweetalert2.min.css" rel="stylesheet">

    <style>
        .referral_container {
            flex-direction: column;
            margin-top: 20px;
        }

        .card {
            background-color: #f8f9fa;
            /* Light background color */
            border-radius: 10px;
            /* Rounded corners */
            border: 1px solid #ddd;
            /* Light border */
        }

        .lead {
            font-size: 1.25rem;
            font-weight: 500;
        }

        #copyButton {
            font-size: 1rem;
        }

        #copyButton:hover {
            background-color: #28a745;
            /* Slightly darker green on hover */
            cursor: pointer;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <%- include("../../views/partials/user/sidebar") %>

        <!-- Content -->
        <div class="content p-5 pt-2">
            <div class="container d-flex justify-content-center align-items-center referral_container">
                <div class="wallet-container">
                    <!-- Wallet Icon Section -->
                    <div class="wallet-icon text-center">
                        <i class="bi bi-wallet2 fs-1"></i>
                    </div>

                    <!-- Referral Bonus Section -->
                    <h5 class="mt-3 text-center">Referral Bonus</h5>
                    <h3 class="mt-3 text-center"><strong>â‚¹<%= referralBonus %></strong></h3>

                    <!-- Referred User Details Section -->


                </div>
                <div class="card p-3 shadow-sm">
                    <div class="row">
                        <div class="col-12 text-center">
                            <p class="lead">This is your Referral Link</p>
                            <h4 class="text-primary">
                                http://localhost:5000/user/signup?ref=<%= ReferralCode %>
                            </h4>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-success mt-3" id="copyButton" onclick="copyReferralLink()">Copy
                                Link</button>
                        </div>
                    </div>
                </div>
                <table class="table table-hover table-bordered text-center align-middle mt-5">
                    <thead class="table-light">
                        <tr>
                            <th>User Email </th>
                            <th>Join time</th>
                            <th>Referral Bonous</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% allReferrals.forEach(referral=>{ %>
                        <tr>
                            <td> <%= referral.userEmail %></td>
                            <td><%= referral.createdAt.toLocaleString() %></td>
                            <td>100</td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.4/dist/sweetalert2.min.js"></script>
        <script>
            function copyReferralLink() {
                const referralLink = document.querySelector('h4').textContent;
                navigator.clipboard.writeText(referralLink).then(() => {
                    alert('Referral link copied to clipboard!');
                }).catch(err => {
                    console.error('Failed to copy text: ', err);
                });
            }
        </script>

</body>

</html>