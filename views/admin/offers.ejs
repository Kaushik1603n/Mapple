<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        color: #343a40;
    }

    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
    }

    .badge {
        font-size: 0.9rem;
    }

    .pagination {
        margin-top: 1.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>

<body>

    <div class="d-flex flex-column flex-lg-row m-4">
        <!-- Sidebar -->
        <%- include("../../views/partials/admin/sidebar") %>

            <div class="container my-4 py-4 bg-white rounded shadow-sm p-4">
                <h1 class="text-center mb-4">Offer Management</h1>

                <div class="d-flex justify-content-between align-items-center my-3">
                    <h4 class="mb-0">Offers</h4>
                    <a href="/admin/addOffer" class="btn btn-secondary">+ Add Offers</a>
                </div>

                <table class="table table-striped table-bordered " id="offerTable">
                    <thead class="table-secondary">
                        <tr>
                            <th>Offer Type</th>
                            <th>Product/Category</th>
                            <th>title</th>
                            <th>Offer</th>
                            <th>Start</th>
                            <th>Expiry</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                    </tbody>
                </table>
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <p class="mb-2 mb-md-0">
                        Showing <span id="start-count"></span> to <span id="end-count"></span> of <span id="total-count"></span> offers
                    </p>
                    <nav>
                        <ul class="pagination pagination-sm mb-0" id="pagination-controls">
                            <!-- Pagination buttons will be dynamically generated here -->
                        </ul>
                    </nav>
                </div>

            </div>


    </div>
    <script src="/js/admin/offer.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
