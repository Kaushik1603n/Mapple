<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/customer.css">
    <style>
        .card {
            border: none;
            border-radius: 10px;
        }

        label {
            font-size: 14px;
            color: #464545;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
            margin-bottom: 20px;
        }

        .breadcrumb-item a {
            color: #6c757d;
            text-decoration: none;
        }

        .breadcrumb-item.active {
            color: #000;
        }

        img.rounded-circle {
            width: 150px;
            height: 150px;
        }

        .btn-dark {
            background-color: #464545;
            border: none;
            border-radius: 5px;
        }

        input::placeholder {
            font-size: 12px;
            /* Adjust the font size as needed */
            color: #888;
            /* Optional: Change the color of the placeholder */
        }
    </style>
</head>

<body>
    <div class="d-flex flex-column flex-lg-row">
        <!-- Sidebar -->
        <%- include("../../views/partials/admin/sidebar") %>

            <!-- Main Content -->
            <div class="container-fluid py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-10 col-md-12">
                        <div class="row">
                            <% if (locals.message && locals.message.length> 0) { %>
                                <div id="alertMessage" class="alert alert-danger alert-dismissible fade show"
                                    role="alert">
                                    <%= locals.message %>
                                </div>
                                <% } %>
                                    <% if (locals.success && locals.success.length> 0) { %>
                                        <div id="alertMessage" class="alert alert-success alert-dismissible fade show"
                                            role="alert">
                                            <%= locals.success %>
                                        </div>
                                        <% } %>
                        </div>
                        <div class="card shadow-lg p-4">
                            <div class="row">
                                <!-- Profile Picture -->
                                <div
                                    class="col-lg-4 col-md-5 text-center d-flex flex-column align-items-center justify-content-center">
                                    <img src="/image/profile.png" alt="Profile"
                                        class="rounded-circle img-fluid shadow mb-3">
                                    <!-- <button class="btn btn-outline-primary btn-sm mt-2">Upload Picture</button> -->
                                </div>
                                <!-- Form Section -->
                                <div class="col-lg-8 col-md-7">
                                    <h5 class="mb-4">Account Setting</h5>
                                    <form >
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label for="firstName" class="form-label">First
                                                    Name</label>
                                                <input type="text" class="form-control" id="name" name="name"
                                                    placeholder="First Name" value="<%= user[0].name || '' %>">
                                                <input type="text" class="form-control" id="_id" name="_id"
                                                    placeholder="_id" value="<%= user[0]._id || '' %>" hidden>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="email" class="form-label">Email</label>
                                                <input type="email" class="form-control" id="email" name="email"
                                                    placeholder="Email" value="<%= user[0].email || '' %>">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="secondaryEmail" class="form-label">Secondary
                                                    Email</label>
                                                <input type="email" class="form-control" id="secondaryEmail"
                                                    name="secondaryEmail" placeholder="Secondary Email"
                                                    value="<%= user[0].secondaryEmail || '' %>">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="phoneNumber" class="form-label">Phone
                                                    Number</label>
                                                <input type="text" class="form-control" id="phoneNumber" name="phone"
                                                    placeholder="Phone Number" value="<%= user[0].phone || '' %>">
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label for="status" class="form-label">Status</label>
                                                <select class="form-control" id="status" name="status">
                                                    <option value="active" <%=!user[0].isBlock ? 'selected' : '' %>
                                                        >Active</option>
                                                    <option value="blocked" <%=user[0].isBlock ? 'selected' : '' %>
                                                        >Blocked</option>
                                                </select>
                                            </div>
                                            
                                        </div>
                                        <div class="text-center mt-4">
                                            <a href="/admin/customer" type="submit" class="btn btn-dark px-5 py-2">Go Back</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.onload = function () {
            const alertMessage = document.getElementById("alertMessage");
            if (alertMessage) {
                setTimeout(() => {
                    alertMessage.classList.remove("show");
                    alertMessage.classList.add("d-none");
                    alertMessage.innerText = ""
                }, 4000);
            }
        };
    </script>
</body>

</html>