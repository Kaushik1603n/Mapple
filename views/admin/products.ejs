<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/customer.css">
</head>

<body>
    <div class="d-flex flex-column flex-lg-row">
        <!-- Sidebar -->
        <%- include("../../views/partials/admin/sidebar") %>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                <div class="d-flex justify-content-between align-items-center mb-4 head-container">
                    <form action="" method="GET" class="d-flex">
                        <input type="text" name="search" class="form-control me-2" placeholder="Search"
                            value="<%= searchQuery %>">
                        <button type="submit" class="btn btn-outline-primary">Search</button>
                    </form>
                </div>
                

                <!-- Main Content -->
                <div class="main-content">
                    <div class="header d-flex justify-content-between align-items-center mb-4">
                        <h2>Products</h2>
                        <div class="header-actions d-flex gap-2">
                            <a href="/admin/addProduct" class="btn btn-dark">+ Add Product</a>
                        </div>
                    </div>
                    <div class="status-tabs mb-4">
                        <button class="tab btn-outline-primary btn btn-secondary">All</button>
                        <button class="tab btn btn-outline-primary">Available</button>
                        <button class="tab btn btn-outline-primary">Out of Stock</button>
                    </div>

                    <!-- Product Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Image</th>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Color</th>
                                    <th>Variant</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th>Added</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% productsWithCategory.forEach(product=> { %>
                                    <tr>
                                        <td>
                                            <img src="<%= product.productImage[0] %>" alt="<%= product.productName %>"
                                                class="img-fluid" style="width: 35px; height: 25px;">
                                            <img src="<%= product.productImage[1] %>" alt="<%= product.productName %>"
                                                class="img-fluid" style="width: 35px; height: 25px;">
                                            <!-- <%= product.productName %> -->
                                        </td>
                                        <td>
                                            <%= product.productName %>
                                        </td>
                                        <td>
                                            <%= product.categoryName %>
                                        </td>
                                        <td>
                                            <%= product.color %>
                                        </td>
                                        <td>
                                            <%= product.variant %>
                                        </td>
                                        <td>
                                            ‚Çπ<%= product.salePrice.toLocaleString() %>
                                        </td>
                                        <td>
                                            <%= product.status %>
                                        </td>
                                        <td>
                                            <%= new Date(product.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">‚úèÔ∏è</button>
                                            <button class="btn btn-sm btn-outline-danger">üóëÔ∏è</button>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <p class="mb-2 mb-md-0">Showing <%= (currentPage - 1) * 4 + 1 %> to <%= Math.min(currentPage *
                                    4, totalProducts) %> of <%= totalProducts %>
                        </p>
                        <nav>
                            <ul class="pagination pagination-sm mb-0">
                                <% if (currentPage> 1) { %>
                                    <li class="page-item">
                                        <a class="page-link"
                                            href="?search=<%= searchQuery %>&page=<%= currentPage - 1 %>">‚Üê</a>
                                    </li>
                                    <% } %>
                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link" href="?search=<%= searchQuery %>&page=<%= i %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>
                                                <% if (currentPage < totalPages) { %>
                                                    <li class="page-item">
                                                        <a class="page-link"
                                                            href="?search=<%= searchQuery %>&page=<%= currentPage + 1 %>">‚Üí</a>
                                                    </li>
                                                    <% } %>
                            </ul>
                        </nav>

                    </div>

                </div>
            </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>