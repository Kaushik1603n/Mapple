<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheet/login.css">
</head>

<body>
    <div class="container">

        <div class="form-container ">
            <h1>Welcome back Admin</h1>
            <p>Enter your Credentials to access your account</p>
            <form action="/admin/login" method="POST">
                <input type="email" name="email" placeholder="Email or Phone Number" required>
                <input type="password" name="password" placeholder="Password" required>
                <% if (locals.message && locals.message.length> 0) { %>
                    <div id="alertMessage" class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= locals.message %>
                    </div>
                    <% } %>
                        <button class="create-account-btn" type="submit">Log In</button>
                        <!-- Changed button text to 'Log In' -->
                        <p class="login-link">
                            <a href="#">Forget Password?</a>
                        </p>
                       
            </form>
           
        </div>
        <div class="image-container">
            <img src="/image/lap.webp" alt="Placeholder Image">
            <!-- Ensure the image is in the public folder -->
        </div>
    </div>
    <script>
        // Automatically hide the alert message after 4 seconds
        window.onload = function () {
            const alertMessage = document.getElementById("alertMessage");
            if (alertMessage) {
                setTimeout(() => {
                    alertMessage.classList.remove("show"); // Bootstrap 'fade' class handles the disappearance
                    alertMessage.classList.add("d-none"); // Hide completely
                }, 4000);
            }
        };
    </script>

</body>

</html>