<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheet/addCategory.css">
</head>

<body>
    <div class="d-flex flex-column flex-lg-row">
        <!-- Sidebar -->
        <%- include("../../views/partials/admin/sidebar") %>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                <div class="d-flex justify-content-between align-items-center mb-4 head-container">
                    <!-- <div class="d-flex align-items-center">
                        <input type="text" class="form-control me-2" placeholder="Search">
                        <button class="btn btn-outline-primary">Search</button>
                    </div> -->
                </div>
                <div class="card shadow-sm">
                    <div class="d-flex justify-content-between align-items-center m-3 flex-wrap">
                        <h4 class="fw-bold mb-2 mb-md-0">Category</h4>
                    </div>
                    <main class="col">
                        <div class="p-4">
                            <!-- <h4 class="mb-4">Category &rsaquo; Add</h4> -->
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <form action="#" method="post" enctype="multipart/form-data">
                                        <!-- Category Name -->
                                        <div class="mb-3">
                                            <label for="category" class="form-label fw-bold">Category</label>
                                            <input type="text" id="category" name="category" class="form-control"
                                                placeholder="Type here" required />
                                        </div>
                                        <!-- Category status -->
                                        <div class="mb-3">
                                            <label for="categoryStatus" class="form-label fw-bold">Category
                                                Status</label>
                                            <select id="categoryStatus" name="categoryStatus" class="form-select"
                                                required>
                                                <option value="" disabled selected>Select status</option>
                                                <option value="list">List</option>
                                                <option value="unlist">Unlist</option>
                                            </select>
                                        </div>
                                        <!-- Description -->
                                        <div class="mb-3">
                                            <label for="description" class="form-label fw-bold">Description</label>
                                            <textarea id="description" name="description" class="form-control" rows="3"
                                                placeholder="Type here" required></textarea>
                                        </div>
                                        <!-- Cover Photo -->
                                        <div class="mb-4">
                                            <label for="coverPhoto" class="form-label fw-bold">Category Cover
                                                Photo</label>
                                            <input type="file" id="coverPhoto" name="coverPhoto" class="form-control" />
                                        </div>
                                        <!-- Buttons -->
                                        <div class="d-flex justify-content-between">
                                            <button type="button" class="btn btn-outline-secondary">Cancel</button>
                                            <button type="submit" class="btn btn-dark">Save Category</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </main>

                </div>
            </div>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>