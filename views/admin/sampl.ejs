<form id="product-form" enctype="multipart/form-data">
  <div class="row g-3">

    <div class="input-row">
      <div class="col-md-6">
        <label for="productName" class="form-label">Product Name</label>
        <input 
          type="text" 
          class="form-control" 
          name="productName" 
          id="productName" 
          placeholder="Enter product name" 
          value="<%= product.productName %>" />
      </div>

      <div class="col-md-6">
        <label for="stockStatus" class="form-label">Stock Status</label>
        <select name="stock" id="stock">
          <option value="Available" <%= product.status === "Available" ? "selected" : "" %>>Available</option>
          <option value="Out of Stock" <%= product.status === "Out of Stock" ? "selected" : "" %>>Out of Stock</option>
          <option value="Discontinued" <%= product.status === "Discontinued" ? "selected" : "" %>>Discontinued</option>
        </select>
      </div>
    </div>

    <div class="input-row">
      <div class="col-md-6">
        <label for="quantity" class="form-label">Available Quantity</label>
        <input 
          type="number" 
          name="quantity" 
          class="form-control" 
          id="quantity" 
          placeholder="Enter available quantity" 
          value="<%= product.quantity || '' %>" />
      </div>

      <div class="col-md-6">
        <label for="category" class="form-label">Category</label>
        <select name="category" class="form-select" id="category">
          <option value="Electronics" <%= product.category === "Electronics" ? "selected" : "" %>>Electronics</option>
          <option value="Clothing" <%= product.category === "Clothing" ? "selected" : "" %>>Clothing</option>
          <option value="Books" <%= product.category === "Books" ? "selected" : "" %>>Books</option>
        </select>
      </div>
    </div>

    <div class="input-row">
      <div class="input-col">
        <label for="images">Images</label>
        <ul>
          <% product.productImage.forEach(function(image) { %>
            <li><img src="<%= image %>" alt="Product Image" style="max-width: 100px;" /></li>
          <% }); %>
        </ul>
        <div class="file-input-container">
          <svg width="18" height="17" viewBox="0 0 18 17" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- SVG content -->
          </svg>
          <span>Choose product images</span>
          <input 
            name="images" 
            type="file" 
            id="file-input" 
            class="file-input" 
            accept="image/*" 
            multiple />
        </div>
      </div>
    </div>

    <div class="input-row">
      <div class="col-12">
        <label for="description" class="form-label">Description</label>
        <textarea 
          name="description" 
          class="form-control" 
          id="description" 
          rows="3"
          placeholder="Enter product description"><%= product.description %></textarea>
      </div>
    </div>

    <div class="input-row">
      <div class="col-md-6">
        <label class="form-label d-block">Colors</label>
        <div class="d-flex align-items-center">
          <input 
            type="radio" 
            name="color" 
            id="colorBlack" 
            value="Black" 
            <%= product.color === "Black" ? "checked" : "" %> />
          <label for="colorBlack">Black</label>
          <input 
            type="radio" 
            name="color" 
            id="colorYellow" 
            value="Yellow" 
            <%= product.color === "Yellow" ? "checked" : "" %> />
          <label for="colorYellow">Yellow</label>
        </div>
      </div>

      <div class="col-md-6">
        <label class="form-label">Variants</label>
        <div class="d-flex">
          <input 
            type="radio" 
            name="variant" 
            id="variant128GB" 
            value="128GB" 
            <%= product.variant === "128GB" ? "checked" : "" %> />
          <label for="variant128GB">128 GB</label>
        </div>
      </div>
    </div>

    <div class="input-row">
      <div class="col-md-6">
        <label for="processor" class="form-label">Processor</label>
        <select class="form-select" name="processor" id="processor">
          <option value="M1" <%= product.processor === "M1" ? "selected" : "" %>>M1</option>
          <option value="Intel" <%= product.processor === "Intel" ? "selected" : "" %>>Intel</option>
        </select>
      </div>

      <div class="col-md-6">
        <label for="offer" class="form-label">Offer %</label>
        <input 
          type="number" 
          name="offer" 
          id="offer" 
          placeholder="Enter Offer" 
          value="<%= product.productOffer %>" />
      </div>
    </div>

    <div class="input-row">
      <button class="button" id="submit-btn" type="submit">Add Product</button>
      <a href="#" class="button-2">Cancel</a>
    </div>
  </div>
</form>
