<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/stylesheet/category.css">
</head>

<body>
    <div class="d-flex flex-column flex-lg-row">
        <!-- Sidebar -->
        <%- include("../../views/partials/admin/sidebar") %>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                <div class="d-flex justify-content-between align-items-center mb-4 head-container">
                    <div class="d-flex align-items-center">
                        <input type="text" class="form-control me-2" placeholder="Search">
                        <button class="btn btn-outline-primary">Search</button>
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="d-flex justify-content-between align-items-center m-3 flex-wrap">
                        <h4 class="fw-bold mb-2 mb-md-0">Category</h4>
                        <a href="/admin/addCategory" class="btn btn-dark">+ Create Category</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Category Name</th>
                                        <th>Added</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (category.length > 0) { %>
                                        <% category.forEach((cat) => { %>
                                            <tr>
                                                <td><div class="d-flex align-items-center"><%= cat.name %></div></td>
                                                <td><%= new Date(cat.createdAt).toLocaleDateString() %></td>
                                                <td>Active</td>
                                                <td>
                                                    <button class="btn btn-outline-primary btn-sm me-1">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <a href="/admin/editCategory/<%= cat._id %>" class="btn btn-outline-secondary btn-sm me-1">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a href="/admin/deleteCategory/<%= cat._id %>" class="btn btn-outline-danger btn-sm">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No categories found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between align-items-center flex-wrap">
                            <p class="mb-2 mb-md-0">Showing <%= (currentPage - 1) * 4 + 1 %> to <%= Math.min(currentPage * 4, totalCategories) %> of <%= totalCategories %></p>
                            <nav>
                                <ul class="pagination pagination-sm mb-0">
                                    <% if (currentPage > 1) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage - 1 %>">←</a>
                                        </li>
                                    <% } %>
                                    <% for (let i = 1; i <= totalPage; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    <% if (currentPage < totalPage) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage + 1 %>">→</a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>